                    <label>Descrição</label>
                    <input type="text" asp-for="Descricao" class="form-control" />
                </div>
                <div class="form-group">
                    <label>Preço</label>
                    <input type="text" asp-for="Preco" class="form-control" />
                </div>
                <div class="form-group">
                    <label>Quantidade</label>
                    <input type="text" asp-for="Quantidade" class="form-control" />
                </div>
