    <body>
        <form asp-action="Cadastrar" method="post">
            <fieldset>
                <legend>Cadastrar Produto</legend>

                <div class="form-group">
                    <label>Nome:</label>
                    <input type="text" asp-for="Nome" class="form-control" />
                </div>
