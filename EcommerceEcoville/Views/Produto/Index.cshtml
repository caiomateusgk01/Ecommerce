
@{
    List<Produto> produtos = ViewBag.Produtos;
    DateTime datahora = ViewBag.DataHora;
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Index</title>
</head>
<body>
    <h1>Gerenciamento de Produtos</h1>
    <a asp-action="Cadastrar">Cadastrar Produto</a>

    <table>
        <thead>
            <tr>
                <th>Nome</th>
                <th>Descrição</th>
                <th>Preço</th>
                <th>Quantidade</th>
                <th>Criado Em</th>
            </tr>
        </thead>
        <tbody>
            @foreach(Produto item in produtos)
            {
            <tr>
                <td>@item.Nome</td>
                <td>@item.Descricao</td>
                <td>@item.Preco.ToString("C2")</td>
                <td>@item.Quantidade</td>
                <td>@item.CriadoEm</td>
                <td>
                    <a asp-action="Remover" asp-route-id="@item.ProdutoId">Remover</a>
                </td>
            </tr>
            }
        </tbody>

    </table>
    <p>
        <b>Dados atualizados em: </b>@datahora
    </p>
</body>
</html>
