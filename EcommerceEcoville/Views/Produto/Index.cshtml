
@{
    
    List<Produto> produtos = ViewBag.Produtos;
    DateTime datahora = ViewBag.DataHora;
}

   
        @* Conteudo *@
<div class="m-5">
    <h1>Gerenciamento de Produtos</h1>
    <a class="btn btn-primary" asp-action="Cadastrar">Cadastrar Produto</a>

    <table style="margin-bottom:15px;margin-top:15px" class="table table-hover table-striped">
        <thead>
            <tr>
                <th>Nome</th>
                <th>Descrição</th>
                <th>Preço</th>
                <th>Quantidade</th>
                <th>Criado Em</th>
            </tr>
        </thead>
        <tbody>
            @foreach (Produto item in produtos)
            {
                <tr>
                    <td>@item.Nome</td>
                    <td>@item.Descricao</td>
                    <td>@item.Preco.ToString("C2")</td>
                    <td>@item.Quantidade</td>
                    <td>@item.CriadoEm</td>
                    <td>
                        <a class="btn btn-primary" asp-route-id="@item.ProdutoId">Remover</a>
                    </td>
                    <td>
                        <a class="btn btn-primary" asp-action="Alterar" asp-route-id="@item.ProdutoId">Alterar</a>
                    </td>
                </tr>
            }
        </tbody>

    </table>
    <p>
        <b>Dados atualizados em: </b>@datahora
    </p>
</div>

