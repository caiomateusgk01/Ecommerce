<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>@ViewBag.Title</title>
    <link href="~/css/bootstrap.css" rel="stylesheet" />
</head>
<body>
    @* Barra de Navegação  *@
    <nav class="navbar navbar-expand-lg navbar-light bg-light">
        <a class="navbar-brand" href="#">Ecommerce Ecoville</a>
        <div class="collapse navbar-collapse" id="navbarColor01">
            <ul class="navbar-nav mr-auto">
                <li class="nav-item active">
                    <a class="nav-link" href="#">Produtos <span class="sr-only">(current)</span></a>
                </li>
                <li class="nav-item">
                    <a class="nav-link" href="#">Categoria</a>
                </li>
                <li class="nav-item">
                    <a class="nav-link" href="#">Venda</a>
                </li>
                <li class="nav-item">
                    <a class="nav-link" href="#">Venda Item</a>
                </li>
            </ul>
            <form class="form-inline my-2 my-lg-0">
                <input class="form-control mr-sm-2" type="text" placeholder="Search">
                <button class="btn btn-secondary my-2 my-sm-0" type="submit">Search</button>
            </form>
        </div>
    </nav>
    @* Conteudo *@
    <div class="m-5">
        @RenderBody()
    </div>
    @* Rodapé *@
    <hr />
    <footer>
        <p style="text-align:center">
            &copy;@DateTime.Now.Year - Desenvolvido por Caio
        </p>
    </footer>
</body>

</html>
